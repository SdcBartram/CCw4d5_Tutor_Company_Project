{% extends 'base.html' %}

{% block content %}

<h1> Students </h1>
<table>
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Comments
        </th>
    </tr>
    {% for student in students_in_lesson %}
    <tr>
        <td><a href="/students/{{ student.id }}"> {{student.first_name}} </a></td>
        <td> {{ student.last_name }}</td>
        <td> {{ student.comment }}</td>
    </tr>
    {% endfor %}    
</table>

<p><a href="/add_student_to_lesson/{{lesson.id}}">Add a Student to Lesson</a></p>
{% endblock %}
