{% extends 'base.html' %}
{% block content %}

<form action="/subjects/{{subject.id}}" method="post">
    {# first_name #}
    <div>
        <label for="subject_name">Subject Name: </label>
        <input type="text" id="subject_name" name="subject_name" value="{{subject.subject_name}}"
            placeholder="Subject Name" required autofocus>
    </div>

    {# learning_style #}
    <div>
        <label for="learning_style"> Learning_style: </label>
        <select id="learning_style" name="learning_style_id">
            {% for learning_style in all_learning_styles %}
            <option value="{{ learning_style.id }}" {% if subject.learning_style.id==learning_style.id %}
                selected="selected" {% endif %}>
                {{ learning_style.learning_style }}
            </option>
            {% endfor %}
        </select>
    </div>
    <button type="submit">Update Subject</button>

</form>

{% endblock %}