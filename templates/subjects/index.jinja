{% extends 'base.html'%}

{% block content %}

<h1> Subjects </h1>

<p><a class="links" href="/subjects/new">Add a New Subject</a></p>


<table>
    <tr>
        <th>
            Subject
        </th>
        <th>
            Learning Style
        </th>
        <th>
            Delete Subject
        </th>
    </tr>
    {% for subject in subjects %}
    <tr>
        <td><a href="/subjects/{{ subject.id }}"> {{subject.subject_name}} </a></td>
        <td> {{ subject.learning_style.learning_style }}</td>
        <td>
            <div class="buttons">

                <form class="delete-form" action="/subjects/{{subject.id}}/delete" method="POST">
                    <button class="trash_button"><i class="fa fa-trash-o fa-3x" style="color:black"
                            aria-hidden="true"></i></button>
                </form>
            </div>
        </td>
    </tr>
    {% endfor %}
</table>

{% endblock %}